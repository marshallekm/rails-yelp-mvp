 <div class="container">
 <div class="row">
 <div class="mx-auto">
 <h1><%=@restaurant.name  %></h1>
 <h2><%= @restaurant.address %></h2>
 <h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>

<ul class = "list-group">
<% @restaurant.reviews.each do |review| %>
<li class ="list-group-item"> <%= review.rating %> </li>
<li class= "list-group-item"><%= review.content %></li>
<% end %>
</ul>

<%# this is the simple form for the review %>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
      <p><%= f.input :content %></p>
  <%= f.input :rating, :collection => %w[1 2 3 4 5] %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to  "Back", restaurants_path %>
</div>
</div>
</div>
